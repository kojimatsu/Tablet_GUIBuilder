<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/abstractWidgetFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <fragment
            android:id="@+id/outline"
            android:name="jp.ac.shibaura_it.se.sayo.guibuilder.screen_edit.OutLineFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <fragment
            android:id="@+id/awFragment"
            android:name="jp.ac.shibaura_it.se.sayo.guibuilder.screen_edit.WidgetSelectionFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <fragment
        android:id="@+id/edit_control_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="jp.ac.shibaura_it.se.sayo.guibuilder.screen_edit.EditControlFragment"
        android:layout_weight="1" />

</LinearLayout>